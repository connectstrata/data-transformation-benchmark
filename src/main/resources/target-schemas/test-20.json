    "email",
    "userId",
    "dataFields"
  ],
  "properties": {
    "email": {
      "type": "string"
    },
    "userId": {
      "type": "string"
    },
    "dataFields": {
      "type": "object",
      "required": [
        "full_name",
        "account_name",
        "title",
        "work_phone",
        "mobile_phone",
        "opportunity_count",
        "max_probability",
        "avg_probability",
        "next_close_date",
        "forecast_categories",
        "opportunity_summaries"
      ],
