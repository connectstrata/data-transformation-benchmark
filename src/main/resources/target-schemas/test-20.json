          "type": "string"
        },
        "account_name": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "work_phone": {
          "type": "string",
          "pattern": "512.*757.*6000"
        },
        "mobile_phone": {
          "type": "string",
          "pattern": "512.*757.*9340"
        },
        "opportunity_count": {
