        },
        "max_probability": {
          "type": "integer"
        },
        "avg_probability": {
          "type": "number"
        },
        "next_close_date": {
          "type": "string"
        },
        "forecast_categories": {
          "type": "array",
          "allOf": [
            {
              "contains": {
                "type": "string"
              }
            },
            {
              "contains": {
                "type": "string"
              }
            }
          ],
          "items": {
            "type": "string"
          }
        },
        "opportunity_summaries": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "allOf": [
            {
              "contains": {
                "type": "string",
                "pattern": "30 Day Pilot"
              }
            },
            {
              "contains": {
                "type": "string",
                "pattern": "SaaS Subscription"
              }
            }
          ],
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
