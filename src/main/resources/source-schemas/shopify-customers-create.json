{
  "type": "object",
  "description": "Shopify customers/create webhook event",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique Shopify customer ID"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the customer was created"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the customer was last updated"
    },
    "first_name": {
      "type": "string",
      "description": "Customer's first name"
    },
    "last_name": {
      "type": "string",
      "description": "Customer's last name"
    },
    "state": {
      "type": "string",
      "description": "Customer account state (e.g. disabled, enabled, invited)"
    },
    "note": {
      "type": ["string", "null"],
      "description": "Note about the customer"
    },
    "verified_email": {
      "type": "boolean",
      "description": "Whether the customer's email has been verified"
    },
    "multipass_identifier": {
      "type": ["string", "null"]
    },
    "tax_exempt": {
      "type": "boolean",
      "description": "Whether the customer is tax exempt"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Customer's email address"
    },
    "phone": {
      "type": ["string", "null"],
      "description": "Customer's phone number"
    },
    "currency": {
      "type": "string",
      "description": "Currency code (e.g. USD)"
    },
    "addresses": {
      "type": "array",
      "description": "List of customer addresses",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "customer_id": { "type": "integer" },
          "first_name": { "type": "string" },
          "last_name": { "type": "string" },
          "company": { "type": ["string", "null"] },
          "address1": { "type": "string" },
          "address2": { "type": ["string", "null"] },
          "city": { "type": "string" },
          "province": { "type": "string" },
          "country": { "type": "string" },
          "zip": { "type": "string" },
          "phone": { "type": ["string", "null"] },
          "name": { "type": "string" },
          "province_code": { "type": "string" },
          "country_code": { "type": "string" },
          "country_name": { "type": "string" },
          "default": { "type": "boolean" }
        }
      }
    },
    "tax_exemptions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "admin_graphql_api_id": {
      "type": "string",
      "description": "Shopify Admin GraphQL API ID"
    },
    "default_address": {
      "type": "object",
      "description": "The customer's default address",
      "properties": {
        "id": { "type": "integer" },
        "customer_id": { "type": "integer" },
        "first_name": { "type": "string" },
        "last_name": { "type": "string" },
        "company": { "type": ["string", "null"] },
        "address1": {
          "type": "string",
          "description": "Street address line 1"
        },
        "address2": {
          "type": ["string", "null"],
          "description": "Street address line 2"
        },
        "city": {
          "type": "string",
          "description": "City name"
        },
        "province": {
          "type": "string",
          "description": "Province or state name"
        },
        "country": {
          "type": "string",
          "description": "Country name"
        },
        "zip": {
          "type": "string",
          "description": "Postal or zip code"
        },
        "phone": {
          "type": ["string", "null"],
          "description": "Phone number"
        },
        "name": {
          "type": "string",
          "description": "Full name"
        },
        "province_code": {
          "type": "string",
          "description": "Province or state code"
        },
        "country_code": {
          "type": "string",
          "description": "Two-letter country code"
        },
        "country_name": {
          "type": "string",
          "description": "Full country name"
        },
        "default": {
          "type": "boolean",
          "description": "Whether this is the default address"
        }
      }
    }
  }
}
